platform :flutter do

  desc "Pull Request verification"
  lane :pull_request_verification do
    sh "cd .. && fastlane/flutter/tests.sh"
    run_codecov(platform: 'flutter')
    sh "cd .. && flutter analyze > flutter_analyze_report.txt || true"
  end

end

