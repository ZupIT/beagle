{
  "_beagleComponent_" : "beagle:simpleForm",
  "context" : {
    "id" : "cadastro",
    "value" : {
      "email" : "beagle@zup.com.br",
      "message" : "Hello Beagle!"
    }
  },
  "onSubmit" : [ {
    "_beagleAction_" : "beagle:confirm",
    "title" : "Cadastro",
    "message" : "Email: @{cadastro.email}Message: @{cadastro.message}"
  } ],
  "children" : [ {
    "_beagleComponent_" : "beagle:button",
    "text" : "Dados",
    "onPress" : [ {
      "_beagleAction_" : "beagle:submitForm"
    } ]
  } ]
}
